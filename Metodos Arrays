const testpop = ["Artur", "Melo", "de", "Albuquerque"];

testpop.pop(); // ["Albuquerque"]

console.log(testpop); // ["Artur", "Melo", "de"]

//======================================================================\\

const testshift = ["Artur", "Melo", "de", "Albuquerque"];

testshift.shift(); // ["Artur"]

console.log(testshift); // ["Melo", "de", "Albuquerque"]

//======================================================================\\

const testunshift = ["Artur", "Melo", "de", "Albuquerque"];

testunshift.unshift("Nome:");

console.log(testunshift);

